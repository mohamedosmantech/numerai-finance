<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="numerai-finance"/>
    <springProperty scope="context" name="appVersion" source="spring.application.version" defaultValue="1.0.0"/>
    <springProperty scope="context" name="env" source="spring.profiles.active" defaultValue="default"/>

    <!-- Console appender - plain text with trace info -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %5level | ${env} | v${appVersion} | trace=%X{traceId:-none} | session=%X{sessionId:-none} | %logger{24} | %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Local profile -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.fincalc" level="DEBUG"/>
    </springProfile>

    <!-- Dev profile -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.fincalc" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
    </springProfile>

    <!-- Production profile: plain text logging -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.fincalc" level="INFO"/>
        <logger name="org.springframework.web" level="WARN"/>
    </springProfile>

    <!-- Default -->
    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.fincalc" level="INFO"/>
    </springProfile>
</configuration>
